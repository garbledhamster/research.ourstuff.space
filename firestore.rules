rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(resource) {
      return isSignedIn() && request.auth.uid == resource.data.owner;
    }

    // Artifacts collection - users can only access their own artifacts
    match /artifacts/{artifactId} {
      // Allow users to read their own artifacts
      allow read: if isSignedIn() && resource.data.owner == request.auth.uid;

      // Allow users to create artifacts where they are the owner
      allow create: if isSignedIn() && request.resource.data.owner == request.auth.uid;

      // Allow users to update their own artifacts
      allow update: if isOwner(resource);

      // Allow users to delete their own artifacts
      allow delete: if isOwner(resource);
    }

    // User private collection - users can only access their own private data
    match /userPrivate/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
